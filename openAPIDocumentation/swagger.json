{
    "openapi": "3.0.0",
    "info": {
        "title": "Ticket Management System API",
        "description": "A Simple Express Ticket Management System API",
        "version": "1.0.0",
        "contact": {
            "name": "Krishna Poul",
            "email": "krishna.poul@afourtech.com"
        }
    },
    "servers": [{
        "url": "http://localhost:3000"
      }],
    "components": {
        "schemas": {
          "User": {
            "type": "object",
            "required": [
                "user_name",
                "password",
                "role"
                ],
            "properties":{
                "user_id": {
                    "type": "string",
                    "description": "User ID Of user"
                  },
                "user_name": {
                    "type": "string",
                    "description": "User Name Of user"
                  },
                  
                  "password": {
                    "type": "string",
                    "description": "Password of user"
                  },
                  "role": {
                    "type": "string",
                    "description": "Role of user"
                  }
            },
            "example": {
                "user_name": "krishnapoul@gmail.com",
                "password": "krish123",
                "role":"user"
              }
              
            },
            "Ticket": {
              "type": "object",
              "required": [
                  "ticket_description"
                ],
              "properties":{
                  "ticket_id": {
                      "type": "string",
                      "description": "Ticket ID Of user"
                    },
                  "ticket_description": {
                      "type": "string",
                      "description": "Information of purpose of ticket"
                    },
                    "ticket_status": {
                      "type": "string",
                      "description": "Status of ticket"
                    },
                    "created_at": {
                      "type": "string",
                      "description": "Raising Time of ticket"
                    },
                    "modified_at": {
                      "type": "string",
                      "description": "Status Time of ticket(when the status of ticket get changed)"
                    },
                    "created_by": {
                      "type": "string",
                      "description": "Owner Of Ticket"
                    },
                    "approved_by": {
                      "type": "string",
                      "description": "By whom ticket is approved/reject/hold"
                    }

              },
              "example": {
                   "ticket_id":"e8c3fde5-e371-4eb2-b230-cf52f4a5b53b",
                  "ticket_description": "for getting internet connection",
                  "ticket_status":"progress",
                  "created_at":"2022-03-07 12:48:21.314",
                  "modified_at":"2022-03-07 12:48:21.314",
                  "created_by":"shivdutjakore@gmail.com",
                  "approved_by":"aniketkale@gmail.com"
                }
              },
                "ResponseBody_Register_User": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "description": "Id of user"
                        },
                        "User_name": {
                            "type": "string",
                            "description": "Name of user"
                        }
                    },
                    "example": {
                        "id": "e8c3fde5-e371-4eb2-b230-cf52f4a5b53b",
                        "user_name": "shivdutjakore@gmail.com",
                        "message":"user registered successfully"

                    }
                }, 
                "RequestBody_Login_User": {
                  "type": "object",
                  "required": [
                      "username",
                      "password"
                  ],
                  "properties": {
                      "username": {
                          "type": "string",
                          "description": "user name of user"
                      },
                      "password": {
                          "type": "string",
                          "description": "Password of user"
                      }
                  },
                  "example": {
                      "user_name": "shivdutjakore@gmail.com",
                      "password": "shivdut23"
                  }
              },
              "ResponseBody_Login_User": {
                "type": "object",
                "required": [
                    "token"
                ],
                "properties": {
                    "token": {
                        "type": "string",
                        "description": "jwt token of user"
                    }
                },
                "example": {
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
                }
            },
                "RequestBody_raise_ticket": {
                    "type": "object",
                    "required": [
                        "ticket_description"
                    ],
                    "properties": {
                        "ticket_description": {
                            "type": "string",
                            "description": "details of ticket"
                        }
                },
                "example": {
                  "ticket_description": "Ticket for getting laptop"

              }
              },
                "ResponseBody_raise_ticket": {
                  "type": "object",
                  "properties": {
                      "ticket_id": {
                          "type": "string",
                          "description": "Id of Ticket"
                      }
                  },
                  "example": {
                      "ticket_id": "e8c3fde5-e371-4eb2-b230-cf52f4a5b53b",
                      "message":"ticket raised successfully"

                  }
              }
            },
        "securitySchemes": {
          "jwt": {
              "type": "http",
              "scheme": "bearer",
              "description": "JWT Authorization of an API",
              "in": "header",
              "bearerFormat": "JWT"
            }
          }
        },
          
        "paths":{
            "/register": {
              "post": {
                "tags": [
                  "Ticket Management System"
                ],
                "summary": "save login information to database",
                "requestBody": {
                  "required": true,
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/User"
                      }
                    }
                  }
                },
                "responses": {
                  "200": {
                    "description": "user registered successfully",
                    "content": {
                      "application/json": {
                        "schema": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/ResponseBody_Register_User"
                          }
                        }
                      }
                    }
                  },
                  "400": {
                    "description": "Bad Request",
                    "content":{
                      "string":{
                          "schema":{
                              "type":"string",
                              "example":"user name or password or role is required"
                          }
                      }
                  }
                  },
                  "500":{
                      "description":"internal server error"
                  }

                }
              }
            },
            "/login": {
                "post": {
                  "tags": [
                    "Ticket Management System"
                  ],
                  "summary": "login information",
                  "requestBody": {
                    "required": true,
                    "content": {
                      "application/json": {
                        "schema": {
                          "$ref": "#/components/schemas/RequestBody_Login_User"
                        }
                      }
                    }
                  },
                  "responses": {
                    "200": {
                      "description": "You are logged in successfully",
                      "content": {
                        "application/json": {
                          "schema": {
                            "type": "array",
                            "items": {
                              "$ref": "#/components/schemas/ResponseBody_Login_User"
                            }
                          }
                        }
                      }
                    },
                    "400": {
                      "description": "Bad Request",
                      "content":{
                        "string":{
                            "schema":{
                                "type":"string",
                                "example":"Invalid passowrd"
                            }
                        }
                    }
                    },
                    "500":{
                        "description":"internal server error"
                    }

                  }
                }
              },
              "/user/raise_ticket": {
                "post": {
                  "tags": [
                    "Ticket Management System"
                  ],
                  "summary": "Raiseing Ticket information",
                  "security": [{
                    "jwt": []
                  }],
                  "requestBody": {
                    "required": true,
                    "content": {
                      "application/json": {
                        "schema": {
                          "$ref": "#/components/schemas/RequestBody_raise_ticket"
                        }
                        
                      }
                    }
                  },
                  "responses": {
                    "200": {
                      "description": "You are ticket raised successfully",
                      "content": {
                        "application/json": {
                          "schema": {
                            "type": "array",
                            "items": {
                              "$ref": "#/components/schemas/ResponseBody_raise_ticket"
                            }
                          }
                        }
                      }
                    },
                    "400": {
                      "description": "Bad Request"
                    },
                    "401": {
                      "description": "Unauthorized",
                      "content":{
                        "string":{
                            "schema":{
                                "type":"string",
                                "example":"Token invalid"
                            }
                        }
                    }
                    },
                    "500":{
                        "description":"internal server error"
                    }

                  }
                }
              },
              "/admin/all_tickets": {
                "get": {
                  "tags": [
                    "Ticket Management System"
                  ],
                  "summary": "Getting Information OF all Ticket",
                  "security": [{
                    "jwt": []
                  }],
                  "responses": {
                    "200": {
                      "description": "You are ticket raised successfully",
                      "content": {
                        "application/json": {
                          "schema": {
                            "type": "array",
                            "items": {
                              "$ref": "#/components/schemas/Ticket"
                            }
                          }
                        }
                      }
                    },
                    "400": {
                      "description": "Bad Request"
                    },
                    "403": {
                      "description": "forbidden",
                      "content":{
                        "string":{
                            "schema":{
                                "type":"string",
                                "example":"User is not allow to see all ticket information"
                            }
                        }
                    }
                    },
                    "500":{
                        "description":"internal server error"
                    }

                  }
                }
              }
        }    
      }